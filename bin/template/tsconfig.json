{
  "compilerOptions": {
    "module": "es2015",
    "target": "es6",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@C/*": ["src/common/*"],
      "@G/*": ["src/gas/*"],
      "@V/*": ["src/vue/*"]
    },
    "removeComments": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}